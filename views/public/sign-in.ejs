<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Login</title>
  <link rel="stylesheet" href="/css/style-login.css">
  <script src="https://www.google.com/recaptcha/api.js" async defer></script> <!-- reCAPTCHA -->
  <style>
    .mensagem-sucesso {
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 5px;
      background-color: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
      text-align: center;
    }
    .mensagem-erro {
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 5px;
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
      text-align: center;
    }
  </style>
</head>
<body>

  <% if (typeof query !== 'undefined' && query.cadastro === 'sucesso') { %>
    <p class="mensagem-sucesso">Cadastro realizado com sucesso! Faça login.</p>
  <% } %>

  <% if (typeof erro !== 'undefined' && erro) { %>
    <p class="mensagem-erro"><%= erro %></p>
  <% } %>

  <div id='message'>
  </div>

  <form id="sign-in-form">
    <h2>Login</h2>
    <input type="email" name="email" placeholder="E-mail" required><br>
    <input type="password" name="password" placeholder="Senha" required><br>

    <!-- Aqui entra o reCAPTCHA -->
    <div class="g-recaptcha" data-sitekey="6Leu9H4rAAAAAKL1I7ilFxLvpcnK0ZoWeN5R1wrP"></div><br>

    <button type="submit">Entrar</button>
    <p>Não tem conta? <a href="./register">Cadastre-se</a></p>
    <p><a href="/forgot">Esqueci minha senha</a></p>
  </form>

  <script>
      const form = document.getElementById('sign-in-form');
      const messageDiv = document.getElementById('message');

      form.addEventListener('submit', async (event) => {
          // 1. Impede o recarregamento da página
          event.preventDefault();

          // 2. Pega os dados do formulário
          const email = event.target.email.value;
          const password = event.target.password.value;

          try {
              // 3. Usa o Fetch para enviar os dados como JSON
              const response = await fetch('/sign-in', {
                  method: 'POST',
                  headers: {
                      'Content-Type': 'application/json' // Informa que estamos enviando JSON
                  },
                  body: JSON.stringify({ email, password }) // Converte o objeto para string JSON
              });

              const data = await response.json();
              
              if(data.message) {
                messageDiv.textContent = data.message;
                //  + data.accessToken;
              }

              if (response.ok && data.sucess) {
                  
                  // Verifica se existe um parâmetro 'redirectUrl' na URL atual
                  const urlParams = new URLSearchParams(window.location.search);
                  const redirectUrl = urlParams.get('redirectUrl');

                  if (redirectUrl) {
                      // Se houver, redireciona de volta para a página original
                      window.location.href = redirectUrl;
                      // Aqui você guardaria o token e redirecionaria o usuário
                  } else {
                      // Se não, vai para o dashboard padrão
                      window.location.href = 'testst';
                  }
              } 
              else {
                  messageDiv.textContent = data.message;
              }
          } catch (error) {
              messageDiv.textContent = 'Erro de conexão com o servidor.';
              console.error('Erro no fetch:', error);
          }
      });
  </script>
</body>
</html>